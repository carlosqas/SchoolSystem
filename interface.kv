            font_size: 20  
            pos: 100, 445
    Widget:
        MyTextInput:
            size: 250, 40
            pos: 40, 400
            font_size: 18
            padding: [10, 0.5*(self.height - self.line_height)]
            text: ''
            hint_text: 'Search Student ID'
