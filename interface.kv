    Widget:
        Label:
            size: 120, 40
            pos: 150, 350
            text: ''
            id: mensagem
            color: (1,0,0,1)
    Widget:
        MyTextInput:
            size: 320, 50
            pos: 40, 290
            text: ''
            hint_text: 'Student Name'
            foreground_color: 1,1,1,1
            font_size: 18
            padding: [7, 0.5*(self.height - self.line_height)]
